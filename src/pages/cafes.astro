       gap: 20px;
  }

  /* The text overlay */
  .overlay-text {
    position: absolute;
    top: 0;
    left: 0;
    
    background: rgba(0,0,0,0.6); /* dark overlay */
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0; /* hide initially */
    transition: opacity 0.4s ease; /* smooth effect */
    font-size: 1rem;
    text-align: center;
    padding: 5px;
  }

  /* Show text on hover */
  .image-container:hover .overlay-text {
    opacity: 1;
  }

