}

.card img {
  width: 100%;
  border-radius: 25px;
  height: 350px;
  border: #000 solid 3px;
}

.card:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 12px rgba(0,0,0,0.15);
	radius:10px;

}

.card h3 {
  font-size: 26px;
  margin: -10px 0px;
}

.card p {
  font-size: 18px;
  color: #444;
  margin-top: -10px;
}

.btn {
  display: inline-block;
  padding: 8px 16px;
  background-color: #f5b6b6;
  border-radius: 5px;
  color: black;
  text-decoration: none;
  margin-top: 10px;
  font-style: italic;
  border: #000000 solid 2px;
  width: 90px;
  text-align: center;
}

.btn:hover {
  background-color: #ff9e9e;
}


.border{
