<style>
  .nav-menu {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    list-style: none;
    margin: 50px 90px;
    padding: 0;
  }

  .nav-menu a {
    text-decoration: none;
    color: inherit;
    font-size: 1.1rem;
    transition: color 0.3s ease;
  }

  .nav-menu a:hover {
    color: #0073e6;
  }

  /* Tablet */
  @media (max-width: 768px) {
    .nav-menu {
      margin: 30px 40px;
      gap: 15px;
      flex-wrap: wrap;
    }
    .nav-menu a {
      font-size: 1rem;
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    .nav-menu {
      flex-direction: column;
      gap: 10px;
      margin: 20px 0;
    }
    .nav-menu a {
      font-size: 0.95rem;
    }
  }
</style>
